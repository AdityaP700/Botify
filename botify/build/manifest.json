{
  "manifest_version": 3,
  "name": "Botify Chatbot",
  "version": "1.0",
  "description": "Chatbot extension for e-commerce websites",
  "permissions": [
    "cookies",
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.ebay.com/*",
    "https://*.flipkart.com/*",
    "http://localhost:8000/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "image.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.ebay.com/*",
        "*://*.flipkart.com/*"
      ],
      "js": ["static/js/main.1220bf13.js"],
      "css": ["static/css/main.62886d72.css"]
    }
  ],
  "icons": {
    "16": "image.png",
    "48": "image.png",
    "128": "image.png"
  }
}