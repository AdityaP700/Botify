{
  "manifest_version": 3,
  "name": "Botify Chatbot",
  "version": "1.0",
  "description": "Chatbot extension for e-commerce websites like Amazon and Flipkart.",
  "permissions": [
    "cookies",
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.ebay.com/*",
    "https://*.flipkart.com/*",
    "http://localhost:8000/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "static/js/background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.ebay.com/*",
        "*://*.flipkart.com/*"
      ],
      "js": ["static/js/content.js"]
    }
  ],
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  }
}
